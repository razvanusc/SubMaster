<div class="wrapper-dark">
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">

        <%= simple_form_for(@lesson) do |f| %>
          <%= f.input :start_time %>
          <%= f.input :start_date %>
          <%= f.input :duration %>
          <%= f.input :price %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :subject_id, collection: @subjects %>
          <%= f.submit %>
        <% end %>

      </div>
    </div>
  </div>
</div>
