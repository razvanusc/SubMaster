<div class="navbar-wagon">
  <% if user_signed_in? %>
    <div class="navbar-wagon-left">
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= cl_image_tag(current_user.photo.present? ? current_user.photo : "avatar_placeholder", height: 300, width: 300, crop: :thumb, gravity: :face, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" )%>
          <ul class="dropdown-menu dropdown-menu-left navbar-wagon-dropdown-menu">
            <li> <%= link_to "Profile", user_path(current_user)%> </li>
            <li> <%= link_to "Home", root_path%> </li>
            <li> <%= link_to "About", user_path(current_user)%> </li>
            <li> <%= mail_to "info@submaster.club", "Contact" %> </li>
            <li> <%= link_to destroy_user_session_path, method: :delete do %>
                    <%= t(".sign_out", default: "Log out") %>
                  <% end %> </li>
          </ul>
        </div>
      </div>
    </div>
    <strong> <%= link_to root_path, class: "navbar-wagon-item navbar-wagon-brand logo" do %>
      <%= image_tag "logo1.png", height: 50 %>
    <% end %> </strong>
  <% if current_page? ('/lessons')%>
      <div class="navbar-wagon-item navbar-wagon-item-right">
      <button onclick="myFunction()", class="navbar-button"><i class="fas fa-search"></i></button>
      </div>
  <%end %>

  <% else %>

    <strong> <%= link_to root_path, class: "navbar-wagon-item navbar-wagon-brand logo" do %>
      <%= image_tag "logo1.png", height: 50 %>
    <% end %> </strong>

  <%end%>
</div>
