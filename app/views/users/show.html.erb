<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 text-center">

    <p><%= @user.first_name %></p>
    <p><%= @user.last_name%></p>
    <p><%= @user.email%></p>
    <p><%= @user.phone_number%></p>
    <p><%= @user.bio%></p>
    <p><%= @user.website_url%></p>
    <p><%= @user.facebook_url%></p>
    <p><%= @user.instagram_url%></p>
    <p>Available:
      <% if @user.available%>
        <%= "Yes" %>
      <% else %>
        <%= "No" %>
      <% end %>
    </p>

    <p><%= @user.address%></p>
    <p><%= @user.weekday_preference%></p>
    <p><%= @user.daytime_preference%></p>


    </div>
  </div>
</div>
